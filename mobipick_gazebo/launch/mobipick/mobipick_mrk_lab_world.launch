<?xml version="1.0"?>
<launch>
  <arg name="gui" default="true" />
  <arg name="arm_velocity_controller" default="false" doc="Start the arm velocity controller instead of the trajectory controller?" />

  <include file="$(find mobipick_gazebo)/launch/mobipick/mobipick_empty_world.launch">
    <arg name="gui" value="$(arg gui)" />
    <arg name="arm_velocity_controller" value="$(arg arm_velocity_controller)" />
    <arg name="world_name" value="$(find mobipick_gazebo)/worlds/rh5_mrk_lab.sdf"/>
    <arg name="robot_x"   value="9.08" />
    <arg name="robot_y"   value="11.32" />
    <arg name="robot_yaw" value="1.57" />
  </include>

  <!-- spawn power drill -->
  <include file="$(find mobipick_gazebo)/launch/objects/powerdrill.launch">
    <arg name="x"     default="10.05" />
    <arg name="y"     default="11.18" />
    <arg name="z"     default="1.02" />
    <arg name="roll"  default="$(eval pi / 2)" />
    <arg name="pitch" default="0.0" />
    <arg name="yaw"   default="$(eval pi)" />
  </include>

  <!-- spawn table -->
  <param name="table_description"
    command="$(find xacro)/xacro '$(find mobipick_gazebo)/urdf/tall_table.urdf.xacro'" />
  <node name="spawn_table" pkg="gazebo_ros" type="spawn_model" args="-urdf -param table_description -model table_1 -x 10.05 -y 11.35"
    respawn="false" output="screen" />
</launch>
