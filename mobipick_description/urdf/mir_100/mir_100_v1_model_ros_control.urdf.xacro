<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="mir_100" >

  <xacro:include filename="$(find mobipick_description)/urdf/mir_100/mir_100_v1.urdf.xacro" />
  <xacro:include filename="$(find mobipick_description)/urdf/mir_100/mir_100.gazebo.xacro" />
  <xacro:include filename="$(find mobipick_description)/urdf/common.gazebo.xacro" />

  <link name="base_footprint" />

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
  </joint>

  <xacro:mir_100 prefix=""/>
  <xacro:set_all_wheel_frictions prefix=""/>
  <xacro:controller_plugin_gazebo robot_namespace=""/>
</robot>
